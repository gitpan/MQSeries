void
MQSTAT(Hconn,StatType,Stat,CompCode,Reason)
        MQHCONN Hconn
        MQLONG  StatType
        MQSTS   Stat = NO_INIT
        MQLONG  CompCode = NO_INIT
        MQLONG  Reason = NO_INIT

    PREINIT:
        MQSTS stat_dft = {MQSTS_DEFAULT};
    CODE:
        memcpy((char*)&Stat, &stat_dft, sizeof(Stat));
        MQSTAT(Hconn,StatType,&Stat,&CompCode,&Reason);
    OUTPUT:
        Stat
        CompCode
        Reason

